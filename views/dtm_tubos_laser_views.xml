<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <data>
         <record id="dtm_tubos_laser_tree" model="ir.ui.view">
            <field name="name">dtm_tubos_laser_tree</field>
            <field name="model">dtm.tubos.laser</field>
            <field name="arch" type="xml">
                <tree create="false">
                    <field name="orden_trabajo"/>
                    <field name="fecha_entrada"/>
                    <field name="nombre_orden"/>
                </tree>
            </field>
        </record>
        <record id="dtm_tubos_laser_accion" model="ir.actions.act_window">
            <field name="name">Cortadora de tubos</field>
            <field name="res_model">dtm.tubos.laser</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="dtm_tubos_laser_tree" />
        </record>

         <record id="dtm_tubos_laser_form" model="ir.ui.view">
            <field name="name">dtm.tubos.laser.form</field>
            <field name="model">dtm.tubos.laser</field>
            <field name="arch" type="xml">
                <form string="formulario">
                    <sheet>
                        <group >
                            <field name="orden_trabajo"/>
                            <field name="fecha_entrada"/>
                            <field name="nombre_orden"/>
                        </group>

                         <notebook>
                                <page string="Archivos">
                                    <field name="tubos_id"  >
                                        <tree>
                                            <field name="nombre" />
<!--                                            <field name="cortado" widget="boolean_toggle"/>-->
        <!--                                    <button type="object" name="action_listo" string="OK"   class="btn btn-primary"/>-->
        <!--                                    <button type="object" name="action_listo" string="OK"  icon="fa-check" class="btn btn-primary"/>-->
                                        </tree>
                                       <form>
                                            <group >
                                                <field name="documentos" filename="nombre" widget="pdf_viewer"></field>
                                                <field name="nombre" invisible="1"></field>
                                            </group>
                                         </form>

                                    </field>
                                </page>
                                <page string="Material">
                                       <field name="materiales_id">
                                           <tree>
                                                <field name="identificador"/>
                                                <field name="nombre"/>
                                                <field name="medida"/>
                                                <field name="cantidad"/>
                                                <field name="inventario"/>
                                                <field name="requerido"/>
                                                <field name="localizacion"/>
                                           </tree>


                                       </field>
                                </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

<!--        <menuitem id="menu_dtm_tubos_laser"  action="dtm_tubos_laser.dtm_tubos_laser_accion" />-->
    </data>

</odoo>
